# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# API Gateway
API_GATEWAY_PORT=8000

# Auth Service
AUTH_SERVICE_PORT=8001
AUTH_SECRET_KEY=your_secure_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth Settings
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback

# Service URLs (обычно не требуют изменений при использовании Docker Compose)
AUTH_SERVICE_URL=http://auth_service:8000
ROOM_SERVICE_URL=http://room_service:8000
COMPETITION_SERVICE_URL=http://competition_service:8000
ACHIEVEMENT_SERVICE_URL=http://achievement_service:8000

# Environment
ENV=development

# Порты для прямого доступа к сервисам
ROOM_SERVICE_PORT=8002
COMPETITION_SERVICE_PORT=8003
ACHIEVEMENT_SERVICE_PORT=8004
