# PostgreSQL Connection Settings
# Настройте эти параметры для подключения к вашей базе данных PostgreSQL

# Адрес хоста PostgreSQL
POSTGRES_HOST=localhost

# Порт PostgreSQL
POSTGRES_PORT=5432

# Администраторское имя пользователя PostgreSQL
POSTGRES_ADMIN_USER=postgres

# Пароль администратора PostgreSQL
POSTGRES_ADMIN_PASSWORD=secure_password

# Количество попыток подключения
RETRY_COUNT=5

# Таймаут подключения в секундах
CONNECT_TIMEOUT=10

# Кодировка клиента
CLIENT_ENCODING=sql_ascii

# ===== Настройки сервисов =====

# Auth Service
AUTH_SERVICE_USER=auth_user
AUTH_SERVICE_PASSWORD=authpassword123
AUTH_SERVICE_DB=auth_db

# Course Service
COURSE_SERVICE_USER=course_user
COURSE_SERVICE_PASSWORD=coursepassword123
COURSE_SERVICE_DB=course_db
